<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:dividerPadding="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:showDividers="middle">

        <TextView
            android:id="@id/view_animation_item_id"
            style="@style/MenuText"
            android:text="@string/view_animation" />

        <TextView
            android:id="@id/property_animation_item_id"
            style="@style/MenuText"
            android:text="@string/property_animation" />

        <TextView
            android:id="@id/layout_transitions_item_id"
            style="@style/MenuText"
            android:text="@string/layout_transitions" />

        <TextView
            android:id="@id/transitions_framework_item_id"
            style="@style/MenuText"
            android:text="@string/transitions_framework" />

        <TextView
            android:id="@id/shared_element_item_id"
            style="@style/MenuText"
            android:text="@string/shared_elements_transitions" />

        <TextView
            android:id="@id/drawable_animation_item_id"
            style="@style/MenuText"
            android:text="@string/drawable_animation" />

    </LinearLayout>

</ScrollView>